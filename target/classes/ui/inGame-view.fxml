<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="gameArea" prefHeight="600.0" prefWidth="800.0" stylesheets="@mainStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.inGameController">
    <!-- Main layout -->
    <VBox prefHeight="600.0" prefWidth="900.0" spacing="10.0">
        <!-- Title Section -->
        <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-alignment: center;" text="Curling Game" />
        <!-- Content Section -->
        <HBox spacing="20.0">
         <ImageView fx:id="videoView" fitHeight="514.0" fitWidth="626.0" pickOnBounds="true" preserveRatio="true" />
            <!-- Right Panel -->
            <VBox alignment="CENTER" prefWidth="250.0" spacing="10.0">
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
               <children>
                      <Label fx:id="turnIndicator" style="-fx-font-size: 16;" text="Turn: Player 1">
                     <padding>
                        <Insets bottom="25.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                      <!-- Scoreboard -->
                      <Label fx:id="player1Score" style="-fx-font-size: 16;" text="Player 1: 0" />
                      <Label fx:id="player2Score" style="-fx-font-size: 16;" text="Player 2: 0" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="15.0">
               <children>
                      <!-- Buttons -->
                      <Button fx:id="restartButton" onAction="#onRestartButtonClick" prefWidth="150.0" text="Restart" />
                      <Button fx:id="leaveButton" onAction="#onLeaveButtonClick" prefWidth="150.0" text="Leave Game" />
               </children>
            </VBox>
            </VBox>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
        </HBox>
    </VBox>
</AnchorPane>
